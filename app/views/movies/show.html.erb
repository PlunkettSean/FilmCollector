<h1>View Movies's <%= pluralize(@actors.count, "Actors") %></h1>
<table>
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
		</tr>
	</thead>
	<tbody>
		<% @actors.each do |actor| %>
		<tr>
			<td><%= actor.first_name %></td>
			<td><%= actor.last_name %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<a href="/movies">View movies</a>